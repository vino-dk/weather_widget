{
  "name": "weather_widget_server",
  "version": "1.0.0",
  "description": "Serve weather data to clients.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node built/server.js",
    "client:build": "esbuild client/src/index.tsx --bundle --metafile=meta-client.json --loader:.js=jsx --outfile=built/app.js --format=cjs",
    "server:build": "esbuild server/server.tsx --bundle --metafile=meta-server.json --loader:.js=jsx --outfile=built/server.js --platform=node",
    "css:build": "esbuild --bundle client/src/index.css --outfile=built/styles.css",
    "ssr": "node server/index.ts"
  },
  "author": "Vino Iruthayam",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ignore-styles": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/node": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/ignore-styles": "^5.0.0",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "esbuild": "^0.19.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
